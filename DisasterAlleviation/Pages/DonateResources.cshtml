@page
@model DisasterAlleviation.Pages.DonateResourcesModel
@{
    ViewData["Title"] = "Donate Resources";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.ResourceType"></label>
        <select asp-for="Input.ResourceType" class="form-control">
            <option value="">Select Resource Type</option>
            <option value="Food">Food</option>
            <option value="Clothing">Clothing</option>
            <option value="Medical Supplies">Medical Supplies</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Input.ResourceType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.NameOfItem"></label>
        <input asp-for="Input.NameOfItem" class="form-control" />
        <span asp-validation-for="Input.NameOfItem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Date"></label>
        <input asp-for="Input.Date" class="form-control" type="date" />
        <span asp-validation-for="Input.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.NumberOfItems"></label>
        <input asp-for="Input.NumberOfItems" class="form-control" type="number" min="1" />
        <span asp-validation-for="Input.NumberOfItems" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Donate</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
