@page
@model DisasterAlleviation.Pages.DonationManagentModel
@{
    ViewData["Title"] = "View All Donations";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Resource Type</th>
            <th>Name of Item</th>
            <th>Date</th>
            <th>Number of Items</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Donations != null && Model.Donations.Count > 0)
        {
            foreach (var donation in Model.Donations)
            {
                <tr>
                    <td>@donation.ResourceType</td>
                    <td>@donation.NameOfItem</td>
                    <td>@donation.Date.ToShortDateString()</td>
                    <td>@donation.NumberOfItems</td>
                    <td>@donation.Description</td>
                    <td>@donation.Status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No donations found.</td>
            </tr>
        }
    </tbody>
</table>
