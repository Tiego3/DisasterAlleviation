@page
@model DisasterAlleviation.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Bringing Hope in <span class="text-warning">Times of Crisis</span></h1>
        <p class="lead mb-4">Your donations bring real impact when communities need it most.</p>
        <a href="/Donate" class="btn btn-light btn-lg">Donate Now</a>
    </div>
</section>

<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="mb-5 fw-bold">Our Impact by the Numbers</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="h5">Total Money Donations</h3>
                        <p class="display-6 text-primary fw-bold">R @Model.TotalMoneyDonations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="h5">Goods Received</h3>
                        <p class="display-6 text-primary fw-bold">@Model.TotalGoodsReceived items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="h5">Total Donors</h3>
                        <p class="display-6 text-primary fw-bold">@Model.TotalDonors</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>