@page
@model DisasterAlleviation.Pages.ReportIncidentModel
@{
    ViewData["Title"] = "Report Incident";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.IncidentType"></label>
        <select asp-for="Input.IncidentType" class="form-control" id="incidentTypeDropdown" onchange="toggleOtherIncidentInput()">
            <option value="">Select Incident Type</option>
            <option value="Flood">Flood</option>
            <option value="Earthquake">Earthquake</option>
            <option value="Fire">Fire</option>
            <option value="Storm">Storm</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Input.IncidentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Location"></label>
        <input asp-for="Input.Location" class="form-control" />
        <span asp-validation-for="Input.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Severity"></label>
        <select asp-for="Input.Severity" class="form-control">
            <option value="">Select Severity</option>
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
        <span asp-validation-for="Input.Severity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ReportDate">Date</label>
        <input asp-for="Input.ReportDate" class="form-control" type="date" />
        <span asp-validation-for="Input.ReportDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Report</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        
        function showConfirmation() {
            
            alert("Your incident report has been submitted successfully.");
            return true; 
        }
    </script>
}