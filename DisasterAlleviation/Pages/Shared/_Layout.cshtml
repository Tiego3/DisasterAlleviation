@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Disaster Alleviation Foundation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

</head>

<body>
    <!-- ======================= -->
    <!-- NAVIGATION BAR -->
    <!-- ======================= -->
    <header class="main-header border-bottom shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light bg-white container">
            <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                <img src="~/images/logo.png" alt="Logo" class="brand-logo me-2" />
                <div>
                    <div class="brand-name fw-bold text-primary">Disaster Alleviation Foundation</div>
                    <div class="brand-tag text-muted small">Providing hope in times of crisis</div>
                </div>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                <ul class="navbar-nav align-items-lg-center mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Home" ? "active" : "")" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Donate" ? "active" : "")" asp-page="/Donate">Donate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Volunteer" ? "active" : "")" asp-page="/Volunteer">Volunteer</a>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <!-- Logged-in User Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="accountMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @User.Identity?.Name
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-page="/AdminDashboard">
                                            <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <li>
                                    <form method="post" asp-page="/Logout" class="m-0">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Sign-In Button (Visible if NOT logged in) -->
                    <li class="nav-item">
                            <a class="btn btn-primary rounded-pill ms-lg-3 px-4" asp-page="/AdminLogin">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                            </a>
                    </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <!-- ======================= -->
    <!-- MAIN CONTENT -->
    <!-- ======================= -->
    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    <!-- ======================= -->
    <!-- FOOTER -->
    <!-- ======================= -->
    <footer class="main-footer text-center mt-auto py-4">
        <p class="mb-1 fw-semibold">© @DateTime.Now.Year Disaster Alleviation Foundation</p>
        <p class="text-muted small mb-0">Together we bring hope, relief, and transparency.</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
