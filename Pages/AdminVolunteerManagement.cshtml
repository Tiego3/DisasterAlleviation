@page
@model DisasterAlleviation.Pages.AdminVolunteerManagementModel
@{
    ViewData["Title"] = "Volunteer Management";
}

<!-- ✅ Page Header -->
<section class="container mt-4">
    <a asp-page="/AdminDashboard" class="btn btn-link mb-3">← Back to Admin Dashboard</a>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Volunteer Management</h2>
            <p class="text-muted">Manage volunteer applications and approvals.</p>
        </div>
        <div class="d-flex gap-2">
            <input type="text" class="form-control" style="max-width: 300px;" placeholder="Search by name, email, or location..." id="searchInput">
            <select class="form-select" id="statusFilter" style="max-width: 180px;">
                <option>All Status</option>
                <option>Approved</option>
                <option>Pending</option>
                <option>Rejected</option>
            </select>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0">
                <h6>Total Applications</h6>
                <h3>@Model.TotalApplications</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0">
                <h6 class="text-success">Approved</h6>
                <h3>@Model.ApprovedCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0">
                <h6 class="text-warning">Pending</h6>
                <h3>@Model.PendingCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0">
                <h6>Can Travel</h6>
                <h3>@Model.CanTravelCount</h3>
            </div>
        </div>
    </div>

    <!-- Volunteer Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Volunteer Applications (@Model.Volunteers.Count)</h5>

            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Skills</th>
                            <th>Status</th>
                            <th>Date Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model.Volunteers)
                        {
                            <tr id="row-@v.Id">
                                <td>@v.FullName<br /><small class="text-muted">@v.Email</small></td>
                                <td>@v.Location</td>
                                <td>@v.Skills</td>
                                <td>
                                    <span class="badge bg-@(v.Status == "Approved" ? "success" : v.Status == "Rejected" ? "danger" : "warning text-dark")">@v.Status</span>
                                </td>
                                <td>@(v.AvailableDates?.ToString("MM/dd/yyyy") ?? "—")</td>
                                <td>
                                    <button class="btn btn-outline-primary btn-sm view-details-btn" data-id="@v.Id">View Details</button>
                                    <button class="btn btn-primary btn-sm">Allocate to Disaster</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- ✅ Volunteer Details Modal -->
<div class="modal fade" id="volunteerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4" style="backdrop-filter: blur(8px);">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Volunteer Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="volunteerDetailsContent" class="row"></div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" id="rejectBtn" class="btn btn-outline-secondary">Reject</button>
                <button type="button" id="approveBtn" class="btn btn-primary">Approve</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
    <div id="toastNotification" class="toast align-items-center text-bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage">Action successful</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/volunteer-modal.js"></script>
}
