@page
@model DisasterAlleviation.Pages.DonateModel
@{
    ViewData["Title"] = "Donate";
}

<section class="donate-section container py-5">
    <h2 class="text-center mb-4">Make a Difference Today</h2>
    <p class="text-center text-muted mb-5">Your generosity helps provide immediate relief to communities in need.</p>

    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showToast(
                    "Thank You for Your Donation!",
                    `Your <strong>Anonymous Donor ID</strong> is: <br><strong>@TempData["AnonId"]</strong><br>Please save this ID for future donations.`,
                    "success",
                    false, // manual close
                    "/" // redirect after close
                );
            });
        </script>
    }
    @if (User.IsInRole("Admin") || (Request.Headers["Referer"].ToString().Contains("/Admin")))
    {
        <div class="mb-3">
            <a asp-page="/Admin/AdminDashboard"
               class="btn btn-light border rounded-pill px-3 py-1 small fw-semibold text-secondary back-btn">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Admin
            </a>
        </div>
    }



    <!-- Tabs -->
    <ul class="nav nav-tabs justify-content-center mb-4" id="donationTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.ActiveTab == "monetary" ? "active" : "")"
                    id="monetary-tab" data-bs-toggle="tab" data-bs-target="#monetary"
                    type="button" role="tab" aria-controls="monetary" aria-selected="@(Model.ActiveTab == "monetary")">
                Monetary Donation
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.ActiveTab == "goods" ? "active" : "")"
                    id="goods-tab" data-bs-toggle="tab" data-bs-target="#goods"
                    type="button" role="tab" aria-controls="goods" aria-selected="@(Model.ActiveTab == "goods")">
                Goods Donation
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Monetary -->
        <div class="tab-pane fade @(Model.ActiveTab == "monetary" ? "show active" : "")" id="monetary" role="tabpanel">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card p-4 shadow-sm">
                        <h4 class="mb-3">Monetary Donation</h4>
                        <form method="post" asp-page-handler="MonetaryDonation" id="monetaryForm">
                            <div class="form-check mb-3">
                                <input asp-for="MonetaryForm.IsAnonymous" class="form-check-input" type="checkbox" id="monetaryAnonymous" />
                                <label asp-for="MonetaryForm.IsAnonymous" class="form-check-label">Donate Anonymously</label>
                            </div>

                            <div class="mb-3" id="monetaryNameGroup">
                                <label asp-for="MonetaryForm.DonorName" class="form-label">Full Name *</label>
                                <input asp-for="MonetaryForm.DonorName" class="form-control" id="monetaryName" />
                                <span asp-validation-for="MonetaryForm.DonorName" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="monetaryEmailGroup">
                                <label asp-for="MonetaryForm.Email" class="form-label">Email *</label>
                                <input asp-for="MonetaryForm.Email" class="form-control" id="monetaryEmail" />
                                <span asp-validation-for="MonetaryForm.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="monetaryAnonIdGroup" style="display:none;">
                                <label asp-for="MonetaryForm.AnonymousId" class="form-label">Anonymous ID (if returning)</label>
                                <input asp-for="MonetaryForm.AnonymousId" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="MonetaryForm.Amount" class="form-label">Amount (R) *</label>
                                <input asp-for="MonetaryForm.Amount" class="form-control" type="number" min="1" step="0.01" />
                                <span asp-validation-for="MonetaryForm.Amount" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100">Donate Now</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Goods -->
        <div class="tab-pane fade @(Model.ActiveTab == "goods" ? "show active" : "")" id="goods" role="tabpanel">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card p-4 shadow-sm">
                        <h4 class="mb-3">Goods Donation</h4>
                        <form method="post" asp-page-handler="GoodsDonation" id="goodsForm">
                            <div class="form-check mb-3">
                                <input asp-for="GoodsForm.IsAnonymous" class="form-check-input" type="checkbox" id="goodsAnonymous" />
                                <label asp-for="GoodsForm.IsAnonymous" class="form-check-label">Donate Anonymously</label>
                            </div>

                            <div class="mb-3" id="goodsNameGroup">
                                <label asp-for="GoodsForm.DonorName" class="form-label">Full Name *</label>
                                <input asp-for="GoodsForm.DonorName" class="form-control" id="goodsName" />
                                <span asp-validation-for="GoodsForm.DonorName" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="goodsEmailGroup">
                                <label asp-for="GoodsForm.Email" class="form-label">Email *</label>
                                <input asp-for="GoodsForm.Email" class="form-control" id="goodsEmail" />
                                <span asp-validation-for="GoodsForm.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="goodsAnonIdGroup" style="display:none;">
                                <label asp-for="GoodsForm.AnonymousId" class="form-label">Anonymous ID (if returning)</label>
                                <input asp-for="GoodsForm.AnonymousId" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="GoodsForm.CategoryId" class="form-label">Select Category *</label>
                                <select asp-for="GoodsForm.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select">
                                    <option value="">-- Select a category --</option>
                                </select>
                                <span asp-validation-for="GoodsForm.CategoryId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="GoodsForm.ItemsCount" class="form-label">Number of Items *</label>
                                <input asp-for="GoodsForm.ItemsCount" class="form-control" type="number" min="1" />
                                <span asp-validation-for="GoodsForm.ItemsCount" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="GoodsForm.Description" class="form-label">Description *</label>
                                <textarea asp-for="GoodsForm.Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="GoodsForm.Description" class="text-danger"></span>
                            </div>

                            <hr class="my-4">

                            <h5 class="mb-3"><i class="bi bi-calendar-check me-2"></i>Schedule Drop-off</h5>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Drop-off Method *</label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="GoodsForm.DropoffMethod" id="scheduleDropoff" value="Scheduled" checked>
                                    <label class="btn btn-outline-primary" for="scheduleDropoff">Schedule for Later</label>

                                    <input type="radio" class="btn-check" name="GoodsForm.DropoffMethod" id="immediateDropoff" value="Immediate">
                                    <label class="btn btn-outline-primary" for="immediateDropoff">Drop-off Now</label>
                                </div>
                            </div>

                            <div id="scheduledDropoffSection">
                                <div class="mb-3">
                                    <label asp-for="GoodsForm.DropoffDateTime" class="form-label">Preferred Drop-off Date & Time *</label>
                                    <input asp-for="GoodsForm.DropoffDateTime" type="datetime-local" class="form-control" id="dropoffDateTime" />
                                    <span asp-validation-for="GoodsForm.DropoffDateTime" class="text-danger"></span>
                                    <small class="text-muted">Our facility is open Mon-Fri 8AM-5PM, Sat 9AM-1PM</small>
                                </div>
                            </div>

                            <div id="immediateDropoffSection" style="display:none;">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Immediate Drop-off:</strong> You can bring your donation to our facility now.
                                    A reference number will be generated for you to present upon arrival.
                                </div>
                            </div>

                            <button type="submit" class="btn-gradient btn-primary w-100">Submit Goods Donation</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const toggleGroups = (anonCheck, nameGroup, emailGroup, anonIdGroup, nameInput, emailInput) => {
                if (anonCheck.checked) {
                    nameGroup.style.display = 'none';
                    emailGroup.style.display = 'none';
                    anonIdGroup.style.display = 'block';
                    nameInput.value = '';
                    emailInput.value = '';
                } else {
                    nameGroup.style.display = 'block';
                    emailGroup.style.display = 'block';
                    anonIdGroup.style.display = 'none';
                }
            };

            const monetaryAnon = document.getElementById('monetaryAnonymous');
            const goodsAnon = document.getElementById('goodsAnonymous');

            if (monetaryAnon) {
                monetaryAnon.addEventListener('change', () =>
                    toggleGroups(monetaryAnon,
                        document.getElementById('monetaryNameGroup'),
                        document.getElementById('monetaryEmailGroup'),
                        document.getElementById('monetaryAnonIdGroup'),
                        document.getElementById('monetaryName'),
                        document.getElementById('monetaryEmail')));
            }

            if (goodsAnon) {
                goodsAnon.addEventListener('change', () =>
                    toggleGroups(goodsAnon,
                        document.getElementById('goodsNameGroup'),
                        document.getElementById('goodsEmailGroup'),
                        document.getElementById('goodsAnonIdGroup'),
                        document.getElementById('goodsName'),
                        document.getElementById('goodsEmail')));
            }

        })();

                // Drop-off method toggle
        const scheduleRadio = document.getElementById('scheduleDropoff');
        const immediateRadio = document.getElementById('immediateDropoff');
        const scheduledSection = document.getElementById('scheduledDropoffSection');
        const immediateSection = document.getElementById('immediateDropoffSection');
        const dropoffDateTimeInput = document.getElementById('dropoffDateTime');

        function toggleDropoffSections() {
            if (scheduleRadio && scheduleRadio.checked) {
                scheduledSection.style.display = 'block';
                immediateSection.style.display = 'none';
                dropoffDateTimeInput.required = true;
            } else {
                scheduledSection.style.display = 'none';
                immediateSection.style.display = 'block';
                dropoffDateTimeInput.required = false;
                dropoffDateTimeInput.value = '';
            }
        }

        if (scheduleRadio && immediateRadio) {
            scheduleRadio.addEventListener('change', toggleDropoffSections);
            immediateRadio.addEventListener('change', toggleDropoffSections);
            toggleDropoffSections();
        }

        // Set minimum datetime to current time
        if (dropoffDateTimeInput) {
            const now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            dropoffDateTimeInput.min = now.toISOString().slice(0, 16);
        }
    </script>
}
