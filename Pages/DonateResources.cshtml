@page
@model DisasterAlleviation.Pages.DonateModel
@{
    ViewData["Title"] = "Donate";
}

@if (TempData["AnonId"] != null)
{
    <meta name="notification-type" content="donate" />
    <meta name="notification-message" content="@TempData["AnonId"]" />
}

<section class="donate-section container-xl py-5">
    <h2 class="text-center mb-4">Make a Difference Today</h2>
    <p class="text-center text-muted mb-5">Your generosity helps provide immediate relief to communities in need.</p>

    <!-- Tabs -->
    <ul class="nav nav-tabs justify-content-center mb-4" id="donationTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.ActiveTab == "monetary" ? "active" : "")"
                    id="monetary-tab" data-bs-toggle="tab" data-bs-target="#monetary"
                    type="button" role="tab" aria-controls="monetary" aria-selected="@(Model.ActiveTab == "monetary")">
                Monetary Donation
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.ActiveTab == "goods" ? "active" : "")"
                    id="goods-tab" data-bs-toggle="tab" data-bs-target="#goods"
                    type="button" role="tab" aria-controls="goods" aria-selected="@(Model.ActiveTab == "goods")">
                Goods Donation
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Monetary -->
        <div class="tab-pane fade @(Model.ActiveTab == "monetary" ? "show active" : "")" id="monetary" role="tabpanel">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card p-4 shadow-sm">
                        <h4 class="mb-3 text-primary">Monetary Donation</h4>
                        <form method="post" asp-page-handler="MonetaryDonation" id="monetaryForm">
                            <div class="form-check mb-3">
                                <input asp-for="MonetaryForm.IsAnonymous" class="form-check-input" type="checkbox" id="monetaryAnonymous" />
                                <label asp-for="MonetaryForm.IsAnonymous" class="form-check-label">Donate Anonymously</label>
                            </div>

                            <div class="mb-3" id="monetaryNameGroup">
                                <label asp-for="MonetaryForm.DonorName" class="form-label">Full Name *</label>
                                <input asp-for="MonetaryForm.DonorName" class="form-control" id="monetaryName" />
                                <span asp-validation-for="MonetaryForm.DonorName" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="monetaryEmailGroup">
                                <label asp-for="MonetaryForm.Email" class="form-label">Email *</label>
                                <input asp-for="MonetaryForm.Email" class="form-control" id="monetaryEmail" />
                                <span asp-validation-for="MonetaryForm.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="monetaryAnonIdGroup" style="display:none;">
                                <label asp-for="MonetaryForm.AnonymousId" class="form-label">Anonymous ID (if returning)</label>
                                <input asp-for="MonetaryForm.AnonymousId" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="MonetaryForm.Amount" class="form-label">Amount (R) *</label>
                                <input asp-for="MonetaryForm.Amount" class="form-control" type="number" min="1" step="0.01" />
                                <span asp-validation-for="MonetaryForm.Amount" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100">Donate Now</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Goods -->
        <div class="tab-pane fade @(Model.ActiveTab == "goods" ? "show active" : "")" id="goods" role="tabpanel">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card p-4 shadow-sm">
                        <h4 class="mb-3 text-primary">Goods Donation</h4>
                        <form method="post" asp-page-handler="GoodsDonation" id="goodsForm">
                            <div class="form-check mb-3">
                                <input asp-for="GoodsForm.IsAnonymous" class="form-check-input" type="checkbox" id="goodsAnonymous" />
                                <label asp-for="GoodsForm.IsAnonymous" class="form-check-label">Donate Anonymously</label>
                            </div>

                            <div class="mb-3" id="goodsNameGroup">
                                <label asp-for="GoodsForm.DonorName" class="form-label">Full Name *</label>
                                <input asp-for="GoodsForm.DonorName" class="form-control" id="goodsName" />
                                <span asp-validation-for="GoodsForm.DonorName" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="goodsEmailGroup">
                                <label asp-for="GoodsForm.Email" class="form-label">Email *</label>
                                <input asp-for="GoodsForm.Email" class="form-control" id="goodsEmail" />
                                <span asp-validation-for="GoodsForm.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3" id="goodsAnonIdGroup" style="display:none;">
                                <label asp-for="GoodsForm.AnonymousId" class="form-label">Anonymous ID (if returning)</label>
                                <input asp-for="GoodsForm.AnonymousId" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="GoodsForm.CategoryId" class="form-label">Select Category *</label>
                                <select asp-for="GoodsForm.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select">
                                    <option value="">-- Select a category --</option>
                                </select>
                                <span asp-validation-for="GoodsForm.CategoryId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="GoodsForm.ItemsCount" class="form-label">Number of Items *</label>
                                <input asp-for="GoodsForm.ItemsCount" class="form-control" type="number" min="1" />
                                <span asp-validation-for="GoodsForm.ItemsCount" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="GoodsForm.Description" class="form-label">Description *</label>
                                <textarea asp-for="GoodsForm.Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="GoodsForm.Description" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Submit Goods Donation</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}